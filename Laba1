package com.company;

import java.util.Arrays;
import java.util.Scanner;

public class Teacher {

    // Instance Variables
    String name;
    String surname;
    String daddyname;
    String subject;
    String department;
    String gender;
    String job;

    // Constructor Declaration of Class
    public Teacher(String name, String surname, String daddyname,
                   String subject, String department, String gender, String job)
    {
        this.name = name;
        this.surname = surname;
        this.daddyname = daddyname;
        this.subject = subject;
        this.department = department;
        this.gender = gender;
        this.job = job;
    }

    // method 1
    public String getName()
    {
        return name;
    }

    // method 2
    public String getSurname()
    {
        return surname;
    }

    // method 3
    public String getDaddyname()
    {
        return daddyname;
    }

    // method 4
    public String getSubject()
    {
        return subject;
    }

    // method 5
    public String getDepartment()
    {
        return department;
    }

    // method 6
    public String getGender()
    {
        return gender;
    }

    // method 7
    public String getJob()
    {
        return job;
    }

    public void SearchSubject(String searchSubject)
    {
        if (this.getSubject().equals(searchSubject)){
            System.out.println(this.getName() + " " + this.getSurname() + " " +  this.getDaddyname());
        }
        else {
            return;
        }
    }

    public void SearchJob(String searchJob)
    {
        if (this.getGender().equals("female") & this.getJob().equals(searchJob)){
            System.out.println(this.getName() + " " + this.getSurname() + " " +  this.getDaddyname());
        }
        else {
            return;
        }
    }

    @Override
    public String toString()
    {
        return("\nThis is "+ this.getName() + " " + this.getSurname() + " " +  this.getDaddyname() +
                ".\nGender: " + this.getGender() +
                ".\nCan teach u " + this.getSubject() +
                ".\nDepartment: " + this.getDepartment() +
                ".\nJob: " + this.getJob());
    }


    public static void main(String[] args)
    {
        Teacher teacher1 = new Teacher("Tamara","Tutovenko","Vladimirovna", "High Math",
                "IST", "female", "St.Vikladach");
        Teacher teacher2 = new Teacher("Oleg","Sovenko","Vladimirovich", "High Math",
                "IST", "male", "Dozent");
        Teacher teacher3 = new Teacher("Olga","Protsenko","Bogdanovna", "High Math",
                "IST", "female", "Dozent");
        Teacher teacher4 = new Teacher("Taras","Shevchenko","Grigorovich", "Ukrainian",
                "IST", "male", "St.Vikladach");
        Teacher teacher5 = new Teacher("Svetlana","Gurchenko","Vladimirovna", "English",
                "IST", "female", "Dozent");
        Teacher teacher6 = new Teacher("Oleg","Savchenko","Vladimirovich", "High Math",
                "IST", "male", "Dozent");
        Teacher teacher7 = new Teacher("Teresa","Soroka","Olegovna", "English",
                "IST", "female", "Dozent");
        Teacher teacher8 = new Teacher("Borys","Tenchenko","Viktorovich", "High Math",
                "IST", "male", "Dozent");
        Teacher teacher9 = new Teacher("Sofiya","Sumska","Bogdanovna", "High Math",
                "IST", "female", "Dozent");
        Teacher teacher10 = new Teacher("Taras","Kuts","Romanovich", "High Math",
                "IST", "male", "Dozent");

        Teacher[] arr = new Teacher[] {teacher1, teacher2, teacher3, teacher4, teacher5, teacher6,
                teacher7, teacher8, teacher9, teacher10};
        System.out.println(Arrays.toString(arr));
        Scanner in = new Scanner(System.in);
        System.out.println("Input subject: ");
        String searchSubject = in.nextLine();
        for(int i= 0; i<9; i++){
            arr[i].SearchSubject(searchSubject);
        }
        System.out.println("Input job: ");
        String searchJob = in.nextLine();
        for(int i = 0; i < 9; i++){
            arr[i].SearchJob(searchJob);
        }
        in.close();
    }
}
